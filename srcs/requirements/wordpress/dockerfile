FROM debian:bullseye

COPY ./conf/start.sh /tmp

RUN apt-get update && apt -y install curl wget netcat tar iputils-ping mariadb-client \
	&& apt -y install php php-fpm  php-mysql php-gd php-xml php-curl \
	&& curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar \
	&& chmod +x wp-cli.phar && mv -f wp-cli.phar /usr/local/bin/wp \
	&& chmod +x /tmp/start.sh 

COPY ./conf/www.conf /etc/php/7.4/fpm/pool.d/

RUN sed -i 's/^pid = \/run\/php\/php7\.4-fpm\.pid$/pid = \/var\/run\/php-fpm7.4.pid/' /etc/php/7.4/fpm/php-fpm.conf

CMD ["sh", "-c", "./tmp/start.sh && /usr/sbin/php-fpm7.4 -F"]

#CMD ["sh", "-c", "./tmp/start.sh && /usr/sbin/php-fpm7.4 -F & tail -f /dev/null"]
